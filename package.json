{
  "name": "@glacierjs",
  "version": "0.0.0",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "author": "JerryC (huangjerryc@gmail.com)",
  "license": "MIT",
  "scripts": {
    "bootstrap": "./node_modules/.bin/lerna bootstrap",
    "build": "./node_modules/.bin/lerna run build",
    "version": "./node_modules/.bin/lerna version --no-git-tag-version",
    "publish": "./node_modules/.bin/lerna publish from-package",
    "test:unit": "./node_modules/.bin/jest",
    "cov": "./node_modules/.bin/jest --coverage ",
    "doc:api": "./node_modules/.bin/typedoc",
    "doc:serve": "./node_modules/.bin/docsify serve ./docs",
    "watch:test": "jest --watch"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@glacierjs/plugin-precache": "workspace:^0.1.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.2.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.5"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
