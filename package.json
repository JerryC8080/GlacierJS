{
  "name": "@glacierjs/root",
  "version": "0.0.2",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "author": "JerryC (huangjerryc@gmail.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "npx pnpm i",
    "build": "npx pnpm run build:main -r && npx pnpm run build:module -r && node scripts/build-umd-dist.js",
    "version": "npx pnpm changeset version && npx pnpm i",
    "publish": "npx pnpm -r publish",
    "test:unit": "./node_modules/.bin/jest",
    "cov": "./node_modules/.bin/jest --coverage ",
    "doc:api": "./node_modules/.bin/typedoc",
    "doc:serve": "./node_modules/.bin/docsify serve ./docs",
    "watch:test": "jest --watch"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@pnpm/exec": "^2.0.0",
    "@pnpm/find-workspace-dir": "^4.0.0",
    "@pnpm/find-workspace-packages": "^4.0.0",
    "@pnpm/logger": "^4.0.0",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.2.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "prettier": "^2.5.1",
    "rollup": "^2.70.1",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.5"
  },
  "files": [
    "dist",
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
